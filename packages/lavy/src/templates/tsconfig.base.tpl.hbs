{
  "compilerOptions": {
    "target": "ESNext",
    "module": "{{#if esm}}ESNext{{else}}CommonJS{{/if}}",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    {{#if react}}
    "jsx": "react-jsx",
    {{/if}}
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"]
  }
}